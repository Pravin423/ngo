<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/css/homepage.css" />
    <link rel="stylesheet" href="/public/css/about.css" />
    <style>

        .gallery-img {
            transition: transform 0.3s ease-in-out;
        }
        
        .gallery-img:hover {
            transform: scale(1.1);
        }


        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            visibility: hidden;
            opacity: 0;
            transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
        }

        .modal img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(255, 255, 255, 0.5);
        }

        .modal.active {
            visibility: visible;
            opacity: 1;
        }
    </style>
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow-md py-4 text-center">
        <%- include('partials/navbar') %>
    </header>


    <section class="max-w-6xl mx-auto my-10 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-4xl font-extrabold text-blue-600 text-center mb-6 uppercase tracking-widest">News</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <img src="/images/img2.jpg" alt="News 1" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img3.jpg" alt="News 2" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img4.jpg" alt="News 3" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img5.jpg" alt="News 4" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img6.jpg" alt="News 5" class="gallery-img rounded-lg shadow-md cursor-pointer">
        </div>
    </section>


    <section class="max-w-6xl mx-auto my-10 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-4xl font-extrabold text-green-600 text-center mb-6 uppercase tracking-widest">Planting & Cleaning</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <img src="/images/img7.jpg" alt="Planting 1" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img8.jpg" alt="Planting 2" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img9.jpg" alt="Cleaning 1" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img10.jpg" alt="Cleaning 2" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img11.jpg" alt="Cleaning 3" class="gallery-img rounded-lg shadow-md cursor-pointer">
        </div>
    </section>


    <section class="max-w-6xl mx-auto my-10 p-6 bg-white shadow-lg rounded-lg">
        <h2 class="text-4xl font-extrabold text-red-600 text-center mb-6 uppercase tracking-widest">COVID</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <img src="/images/img12.jpg" alt="COVID 1" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img13.jpg" alt="COVID 2" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img14.jpg" alt="COVID 3" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img15.jpg" alt="COVID 4" class="gallery-img rounded-lg shadow-md cursor-pointer">
            <img src="/images/img16.jpg" alt="COVID 5" class="gallery-img rounded-lg shadow-md cursor-pointer">
        </div>
    </section>


    <div id="modal" class="modal">
        <img id="modalImg" src="" alt="">
    </div>

    <script>

        const modal = document.getElementById("modal");
        const modalImg = document.getElementById("modalImg");
        const images = document.querySelectorAll(".gallery-img");

        images.forEach(img => {
            img.addEventListener("click", () => {
                modalImg.src = img.src;
                modal.classList.add("active");
            });
        });

        modal.addEventListener("click", () => {
            modal.classList.remove("active");
        });
    </script>

</body>
</html>
